<Window x:Class="WPF_DataBase_Homework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_DataBase_Homework"
        mc:Ignorable="d"
        Title="Academy DB" Height="720" Width="1280" ResizeMode="NoResize"
		Background="Gray">
    <Grid>
		<!--Grid Defenition-->
		<Grid.RowDefinitions>
			<RowDefinition Height=".1*"/>
			<RowDefinition/>
			<RowDefinition Height=".05*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width=".25*"/>
		</Grid.ColumnDefinitions>
		
		<!--Interface-->
		<!--Row 0 Column 0-->
		<Menu Height="25" VerticalAlignment="Top" Background="Gray">
			<MenuItem Name="miDataBase" Header="Data Base" FontFamily="Cascadia Code" FontSize="16">
				<MenuItem Name="mi_dbConnect" Header="Connect" Background="DarkGray" FontFamily="Cascadia Code" FontSize="16"/>
				<MenuItem Name="mi_dbReconnect" Header="Recconect" Background="DarkGray" FontFamily="Cascadia Code" FontSize="16"/>
			</MenuItem>
			<MenuItem Name="miExit" Header="Exit" FontFamily="Cascadia Code" FontSize="16"/>
		</Menu>
		<Label Name="lDirection" Content="Directions:" FontFamily="Cascadia Code"
			   FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Bottom"
			   Margin="0,0,0,5"/>
		<ListBox Name="lbDirectionPicker" Height="25" Width="300" 
				 HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="100,0,0,5"
				 Background="DarkGray" FontFamily="Cascadia Code" FontSize="11"/>
		<Label Name="lGroups" Content="Groups:" FontFamily="Cascadia Code"
			   FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Bottom"
			   Margin="0,0,0,5"/>
		<ListBox Name="lbGroupPicker" Height="25" Width="300" 
		 HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="370,0,0,5"
		 Background="DarkGray" FontFamily="Cascadia Code" FontSize="11"/>
		<!--Row 1 Column 0-->
		<DataGrid Name="dg" Grid.Row="1" Grid.Column="0" Background="Orange" Margin="5,5,5,5"/>
	</Grid>
</Window>
